@model Measurements;
<meta charset="UTF-8">

<div class="modal fade" id="addmeasurements">
  <div class="modal-dialog">
    <div class="modal-contant">
      <div class="modal-header">
        <h4 class="modal-title" id="addMeasurementLabel"> Editar</h4>
        <button type="button" class="close" data-dimiss="modal">
          <span>x</span>
        </button>

      </div>
      <div class="modal-body">
        <form action="EditMeasurement">
          <div class="form-group">
            <input type="hidden" asp-for="@Model.MeasurementKey" />           
          </div>          
          <!----VIDA PENELA----->
          <div class="form-group">
            <label asp-for="LadleID"></label>
            <input asp-for="LadleID" class="form-control" placeholder=" Vida da Panela" style="border-radius:15px; height:55px;">
            <span asp-validation-for="LadleID" class="text-danger"></span>
          </div>
          
        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dimiss="modal"> Cancelar</button>
        <button type="button" class="btn btn-primary" data-save="modal">Atualizar</button>
      </div>

    </div>


  </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
  $(document).ready(function () {

    
      
      $("#addmeasurements").modal({

        
          show: true
      });

  })
</script>

