
@model MonitoringTemograficApplication.Models.Processor

@{
    ViewBag.Title = "ProcessorTermografic";
}

<main role="main">
    <br />
    <br />
    <section class="container  d-flex justify-content-center col-12">
        <aside class="col-sm-4">
            <h3 class="subtitle-doc">
                Cadastrar
            </h3>
            <div id="code_login_1">
                <div class="card">
                    <article class="card-body">
                        @if (ViewData["MSG_E"] != null)
                        {
                            <p class="alert alert-danger">@Html.Raw(ViewData["MSG_E"])</p>
                        }
                        <form method="post">
                            <div class="form-group">
                                <label asp-for="Panela"></label>
                                <input asp-for="Panela" class="form-control" placeholder="Digite o número da Panela">
                                <span asp-validation-for="Panela" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Corrida"></label>
                                <input asp-for="Corrida" class="form-control" placeholder="Digite o número da Corrida">
                                <span asp-validation-for="Corrida" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Processar Alterações</button>
                            </div>

                        </form>
                        <form method="post" action="Cancel">

                            <button type="submit" class="btn btn-outline-secondary btn-block">Cancelar</button>
                        </form>

                    </article>
                </div>
            </div>
        </aside>
    </section>
</main>
